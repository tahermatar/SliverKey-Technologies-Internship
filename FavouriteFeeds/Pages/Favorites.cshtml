@page
@model FavouriteFeeds.Pages.FavouritesModel

<!DOCTYPE html>
<html>
<head>
    <title>Favourite RSS Feeds</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .feed-item {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .feed-title {
            font-size: 20px;
            font-weight: bold;
            color: #333;
        }

        .feed-unfavorite-button {
            margin-top: 10px;
        }

            .feed-unfavorite-button button {
                padding: 5px 10px;
                background-color: #f0f0f0;
                color: #333;
                text-decoration: none;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

                .feed-unfavorite-button button:hover {
                    background-color: #ccc;
                }

        .no-items {
            color: #999;
            font-style: italic;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Favourite RSS Feeds</h1>

    @if (Model.FavoriteFeeds != null && Model.FavoriteFeeds.Count > 0)
    {
        @foreach (var feed in Model.FavoriteFeeds)
        {
            <div class="feed-item">
                <h2 class="feed-title">@feed.Title</h2>
                <div class="text-center">
                    <a href="/XMLParser?link=@feed.Link" target="_blank" class="btn btn-primary">Read Page</a>
                    <form method="post" asp-page-handler="ToggleFavorite" class="d-inline">
                        <input type="hidden" name="link" value="@feed.Link" />
                        <button type="submit" class="btn btn-sm @(feed.IsFavorite ? "btn-favorite" : "btn-unfavorite")">
                            <i class="fa fa-star"></i> @(feed.IsFavorite ? "Unstar" : "star")
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <p class="no-items">No favourite feeds available.</p>
    }
</body>
</html>
