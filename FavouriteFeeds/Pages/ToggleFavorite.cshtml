@page
@model FavouriteFeeds.Pages.ToggleFavoriteModel

<!DOCTYPE html>
<html>
<head>
    <title>Toggle Favorite Status</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        h1 {
            color: #333;
        }

        .message {
            margin-top: 20px;
            font-size: 18px;
            color: #666;
        }

        .back-link {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Toggle Favorite Status</h1>

    @if (Model.Success)
    {
        <div class="message">
            @if (Model.IsFavorite)
            {
                <p>Feed has been added to favorites.</p>
            }
            else
            {
                <p>Feed has been removed from favorites.</p>
            }
        </div>
    }
    else
    {
        <div class="message">
            <p>Failed to toggle favorite status.</p>
        </div>
    }

    <div class="back-link">
        <a href="/Index">Back to RSS Feeds</a>
    </div>
</body>
</html>
